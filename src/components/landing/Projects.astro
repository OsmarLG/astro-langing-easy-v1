---
import projects from '../../config/projects.json'
---

<h2 class="font-bold text-5xl my-8 text-center">Projects</h2>

{
    projects.map(project => (
        <div class="md:flex text-center md:text-left md:mt-8">
            <div class="flex-1 gap-y-3">
                <h2 class="font-bold text-2xl my-3">{project.title}</h2>
                <p class="my-2 p-4 md:p-0">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 mt-2 md:mt-0 hover:bg-indigo-400">
                    More Info
                </button>
            </div>
            <div class="flex-1 mt-2 md:mt-0">
                <img src={project.image} class="w-72 m-auto" alt="" />
            </div>
        </div>
    ))
}